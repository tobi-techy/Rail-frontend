# Stacks Mobile App - Environment Variables Template
# Copy this file to .env and fill in your values

# Backend API Configuration
API_BASE_URL=http://localhost:8080/api
EXPO_PUBLIC_API_URL=http://localhost:8080/api
API_TIMEOUT=30000

# Database Configuration (for backend)
POSTGRES_DB=stacks
POSTGRES_USER=stacks_user
POSTGRES_PASSWORD=<your-secure-password>
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# Encryption Keys (CRITICAL: Generate strong keys for production)
# Generate with: openssl rand -base64 32
EXPO_PUBLIC_ENCRYPTION_KEY=<generate-32-char-key>

# Expo Configuration
EXPO_DEVTOOLS_LISTEN_ADDRESS=0.0.0.0
EXPO_PACKAGER_PROXY_URL=http://localhost:8081

# Development Settings
NODE_ENV=development
DEBUG=true
LOG_LEVEL=debug

# Cache Configuration
CACHE_TTL=3600
CACHE_PREFIX=stacks:dev:

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_ANALYTICS=false
ENABLE_DEBUG_TOOLS=true

# Security (CRITICAL: Generate strong secrets for production)
# Generate with: openssl rand -base64 64
JWT_SECRET=<generate-strong-jwt-secret>
ENCRYPTION_KEY=<generate-32-char-encryption-key>
BCRYPT_ROUNDS=10

# Test Credentials (for test scripts only)
TEST_EMAIL=test@example.com
TEST_PASSWORD=<test-password>
TEST_PASSCODE=<test-passcode>
TEST_USER_ID=<test-user-id>

# External Services (add your keys)
EXPO_PUBLIC_SENTRY_DSN=<your-sentry-dsn>
ANALYTICS_KEY=<your-analytics-key>
