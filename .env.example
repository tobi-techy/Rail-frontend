# Stacks Mobile App - Environment Variables Template
# Copy this file to .env and fill in your values

# Backend API Configuration
API_BASE_URL=http://localhost:8080/api
EXPO_PUBLIC_API_URL=http://localhost:8080/api
API_TIMEOUT=30000
EXPO_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com
EXPO_PUBLIC_SOLANA_USDC_MINT=4zMMC9srt5Ri5X14GAgXhaHii3GnPAEERYPJgZJDncDU

# Database Configuration (for backend)
POSTGRES_DB=stacks
POSTGRES_USER=stacks_user
POSTGRES_PASSWORD=<your-secure-password>
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# Encryption Keys (CRITICAL: Generate strong keys for production)
# Generate with: openssl rand -base64 32
EXPO_PUBLIC_ENCRYPTION_KEY=<generate-32-char-key>

# Expo Configuration
EXPO_DEVTOOLS_LISTEN_ADDRESS=0.0.0.0
EXPO_PACKAGER_PROXY_URL=http://localhost:8081

# Development Settings
NODE_ENV=development
DEBUG=true
LOG_LEVEL=debug

# Cache Configuration
CACHE_TTL=3600
CACHE_PREFIX=stacks:dev:

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_ANALYTICS=false
ENABLE_DEBUG_TOOLS=true

# Security (CRITICAL: Generate strong secrets for production)
# Generate with: openssl rand -base64 64
JWT_SECRET=<generate-strong-jwt-secret>
ENCRYPTION_KEY=<generate-32-char-encryption-key>
BCRYPT_ROUNDS=10

# Test Credentials (for test scripts only)
TEST_EMAIL=test@example.com
TEST_PASSWORD=<test-password>
TEST_PASSCODE=<test-passcode>
TEST_USER_ID=<test-user-id>

# External Services (add your keys)
EXPO_PUBLIC_SENTRY_DSN=<your-sentry-dsn>
ANALYTICS_KEY=<your-analytics-key>

# PostHog Analytics
EXPO_PUBLIC_POSTHOG_API_KEY=<your-posthog-api-key>

# API URLs (override defaults)
EXPO_PUBLIC_STAGING_API_URL=https://api.userail.money/api
EXPO_PUBLIC_PRODUCTION_API_URL=https://api.userail.money/api

# Gleap In-App Feedback
EXPO_PUBLIC_GLEAP_API_KEY=<your-gleap-api-key>
EXPO_PUBLIC_GLEAP_TOKEN=YOUR_GLEAP_SDK_KEY

# SSL Certificate Pinning (SPKI SHA-256)
# Format must be `sha256/<base64-hash>`
# Leaf cert pin (regenerate when cert renews — Let's Encrypt renews every ~90 days)
EXPO_PUBLIC_CERT_PIN_1=sha256/5CKU+tGyfCL6hPvxQ362eXnW5oXGoxk9z78S8dq+gTM=
# Intermediate pin (Let's Encrypt E8 — more stable, changes less often)
EXPO_PUBLIC_CERT_PIN_2=sha256/iFvwVyJSxnQdyaUvUERIf+8qk7gRze3612JMwoO3zdU=
