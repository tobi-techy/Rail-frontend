{
  "expo": {
    "name": "Rail Money",
    "slug": "rail",
    "version": "1.0.0",
    "scheme": "rail",
    "platforms": ["ios", "android"],
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-dev-client",
      "expo-secure-store",
      "expo-local-authentication",
      "expo-font",
      [
        "@sentry/react-native/expo",
        {
          "organization": "YOUR_SENTRY_ORG",
          "project": "YOUR_SENTRY_PROJECT"
        }
      ],
      "expo-web-browser",
      "expo-video"
    ],
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    },
    "orientation": "portrait",
    "icon": "./assets/app-icon/app-icon.png",
    "userInterfaceStyle": "light",
    "assetBundlePatterns": ["**/*"],
    "splash": {
      "backgroundColor": "#FF5A00"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.railmoney.rail",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSFaceIDUsageDescription": "Use Face ID to authenticate and secure your account",
        "NSCameraUsageDescription": "Camera access is required for QR code scanning"
      },
      "icon": "./assets/app-icon/app-icon.png"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/app-icon/logo-dark.png",
        "backgroundColor": "#FF5A00"
      },
      "package": "com.railmoney.rail",
      "permissions": ["android.permission.USE_BIOMETRIC", "android.permission.USE_FINGERPRINT"]
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "d2824fee-1afc-48e0-a253-e72399dd968b"
      }
    }
  }
}
