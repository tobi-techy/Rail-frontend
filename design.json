{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "name": "Rail Design System",
  "version": "2.1.0",
  "description": "Bold, dark, minimal fintech design inspired by Fuse Wallet and UglyCash. Money in motion, zero friction.",

  "designPrinciples": {
    "bold": "High contrast, confident typography, unapologetic design choices",
    "dark": "Dark-first UI that feels premium and crypto-native",
    "minimal": "Strip everything unnecessary. If it doesn't serve the user, remove it",
    "momentum": "Money should feel like it's always moving"
  },

  "colors": {
    "brand": {
      "primary": {
        "value": "#00E5A0",
        "description": "Rail Green - vibrant mint for CTAs, success, active states"
      },
      "primaryDark": {
        "value": "#00C88A",
        "description": "Darker mint for pressed states"
      },
      "secondary": {
        "value": "#FF6B35",
        "description": "Rail Orange - Investment Stash, growth, energy"
      },
      "accent": {
        "value": "#6366F1",
        "description": "Indigo - special features, Conductors"
      }
    },

    "stash": {
      "spending": {
        "primary": "#00E5A0",
        "gradient": ["#00E5A0", "#00C88A"],
        "description": "Spending Stash - stability, liquidity"
      },
      "investment": {
        "primary": "#FF6B35",
        "gradient": ["#FF6B35", "#FF8F65"],
        "description": "Investment Stash - growth, momentum"
      }
    },

    "semantic": {
      "success": "#00E5A0",
      "warning": "#FBBF24",
      "error": "#EF4444",
      "info": "#3B82F6"
    },

    "dark": {
      "background": {
        "primary": "#000000",
        "secondary": "#0A0A0A",
        "tertiary": "#141414",
        "card": "#1A1A1A",
        "elevated": "#1F1F1F",
        "input": "#141414"
      },
      "text": {
        "primary": "#FFFFFF",
        "secondary": "#A1A1AA",
        "tertiary": "#71717A",
        "muted": "#52525B"
      },
      "border": {
        "default": "#27272A",
        "subtle": "#1F1F1F",
        "strong": "#3F3F46"
      }
    },

    "light": {
      "background": {
        "primary": "#FFFFFF",
        "secondary": "#FAFAFA",
        "tertiary": "#F4F4F5",
        "card": "#FFFFFF",
        "elevated": "#FFFFFF",
        "input": "#F4F4F5"
      },
      "text": {
        "primary": "#09090B",
        "secondary": "#71717A",
        "tertiary": "#A1A1AA",
        "muted": "#D4D4D8"
      },
      "border": {
        "default": "#E4E4E7",
        "subtle": "#F4F4F5",
        "strong": "#D4D4D8"
      }
    },

    "default": "dark"
  },

  "typography": {
    "fontFamily": {
      "display": "PramukhRounded-Bold",
      "headline": "PramukhRounded-Bold",
      "headline2": "PramukhRounded-Semibold",
      "body": "SF-Pro-Rounded-Medium",
      "bodyBold": "SF-Pro-Rounded-Bold",
      "caption": "SF-Pro-Rounded-Regular",
      "button": "SF-Pro-Rounded-Semibold",
      "mono": "SF-Mono-Regular"
    },

    "scale": {
      "hero": {
        "fontSize": 56,
        "lineHeight": 60,
        "letterSpacing": -2,
        "fontFamily": "PramukhRounded-Bold",
        "usage": "Main balance display"
      },
      "display": {
        "fontSize": 40,
        "lineHeight": 44,
        "letterSpacing": -1.5,
        "fontFamily": "PramukhRounded-Bold",
        "usage": "Large amounts, hero text"
      },
      "h1": {
        "fontSize": 32,
        "lineHeight": 36,
        "letterSpacing": -1,
        "fontFamily": "PramukhRounded-Bold",
        "usage": "Screen titles"
      },
      "h2": {
        "fontSize": 24,
        "lineHeight": 28,
        "letterSpacing": -0.5,
        "fontFamily": "PramukhRounded-Semibold",
        "usage": "Section headers"
      },
      "h3": {
        "fontSize": 20,
        "lineHeight": 24,
        "letterSpacing": -0.3,
        "fontFamily": "SF-Pro-Rounded-Bold",
        "usage": "Card titles"
      },
      "body": {
        "fontSize": 16,
        "lineHeight": 24,
        "letterSpacing": 0,
        "fontFamily": "SF-Pro-Rounded-Medium",
        "usage": "Primary body text"
      },
      "bodySmall": {
        "fontSize": 14,
        "lineHeight": 20,
        "letterSpacing": 0,
        "fontFamily": "SF-Pro-Rounded-Regular",
        "usage": "Secondary text"
      },
      "caption": {
        "fontSize": 12,
        "lineHeight": 16,
        "letterSpacing": 0.2,
        "fontFamily": "SF-Pro-Rounded-Regular",
        "usage": "Labels, hints"
      },
      "overline": {
        "fontSize": 11,
        "lineHeight": 14,
        "letterSpacing": 1,
        "fontFamily": "SF-Pro-Rounded-Semibold",
        "textTransform": "uppercase",
        "usage": "Category labels"
      },
      "button": {
        "fontSize": 16,
        "lineHeight": 20,
        "letterSpacing": 0.3,
        "fontFamily": "SF-Pro-Rounded-Semibold",
        "usage": "Button labels"
      },
      "amount": {
        "fontSize": 32,
        "lineHeight": 36,
        "letterSpacing": -0.5,
        "fontFamily": "SF-Pro-Rounded-Bold",
        "fontVariantNumeric": "tabular-nums",
        "usage": "Stash amounts"
      }
    }
  },

  "spacing": {
    "base": 4,
    "scale": {
      "0": 0,
      "1": 4,
      "2": 8,
      "3": 12,
      "4": 16,
      "5": 20,
      "6": 24,
      "8": 32,
      "10": 40,
      "12": 48,
      "16": 64
    },
    "screen": {
      "paddingX": 16,
      "paddingY": 16
    }
  },

  "borderRadius": {
    "none": 0,
    "sm": 8,
    "md": 12,
    "lg": 16,
    "xl": 20,
    "2xl": 24,
    "3xl": 32,
    "full": 9999
  },

  "shadows": {
    "none": "none",
    "sm": {
      "shadowColor": "#000",
      "shadowOffset": { "width": 0, "height": 1 },
      "shadowOpacity": 0.3,
      "shadowRadius": 2,
      "elevation": 2
    },
    "md": {
      "shadowColor": "#000",
      "shadowOffset": { "width": 0, "height": 4 },
      "shadowOpacity": 0.4,
      "shadowRadius": 8,
      "elevation": 4
    },
    "lg": {
      "shadowColor": "#000",
      "shadowOffset": { "width": 0, "height": 8 },
      "shadowOpacity": 0.5,
      "shadowRadius": 16,
      "elevation": 8
    },
    "glow": {
      "shadowColor": "#00E5A0",
      "shadowOffset": { "width": 0, "height": 0 },
      "shadowOpacity": 0.4,
      "shadowRadius": 20,
      "elevation": 0
    }
  },

  "motion": {
    "duration": {
      "instant": 100,
      "fast": 150,
      "normal": 200,
      "slow": 300
    },
    "easing": {
      "default": "cubic-bezier(0.25, 0.1, 0.25, 1)",
      "spring": "cubic-bezier(0.34, 1.56, 0.64, 1)",
      "smooth": "cubic-bezier(0.4, 0, 0.2, 1)"
    },
    "spring": {
      "default": { "damping": 20, "stiffness": 300 },
      "bouncy": { "damping": 12, "stiffness": 400 }
    }
  },

  "components": {
    "button": {
      "primary": {
        "background": "#00E5A0",
        "text": "#000000",
        "height": 52,
        "borderRadius": 12,
        "fontWeight": 600
      },
      "secondary": {
        "background": "#1A1A1A",
        "text": "#FFFFFF",
        "border": "#27272A",
        "height": 52,
        "borderRadius": 12
      },
      "ghost": {
        "background": "transparent",
        "text": "#FFFFFF",
        "height": 44,
        "borderRadius": 12
      },
      "outline": {
        "background": "transparent",
        "text": "#00E5A0",
        "border": "#00E5A0",
        "height": 52,
        "borderRadius": 12
      }
    },

    "input": {
      "background": "#141414",
      "text": "#FFFFFF",
      "placeholder": "#71717A",
      "border": "#27272A",
      "borderFocused": "#00E5A0",
      "height": 52,
      "borderRadius": 12,
      "paddingX": 16
    },

    "card": {
      "background": "#1A1A1A",
      "border": "#27272A",
      "borderRadius": 16,
      "padding": 16
    },

    "stashCard": {
      "spending": {
        "background": "#1A1A1A",
        "accent": "#00E5A0",
        "iconBg": "#00E5A0",
        "iconColor": "#000000"
      },
      "investment": {
        "background": "#1A1A1A",
        "accent": "#FF6B35",
        "iconBg": "#FF6B35",
        "iconColor": "#FFFFFF"
      }
    },

    "balanceDisplay": {
      "background": "transparent",
      "amountColor": "#FFFFFF",
      "labelColor": "#71717A",
      "positiveColor": "#00E5A0",
      "negativeColor": "#EF4444"
    },

    "bottomSheet": {
      "background": "#0A0A0A",
      "handle": "#3F3F46",
      "borderRadius": 24
    },

    "tabBar": {
      "background": "#000000",
      "border": "#1A1A1A",
      "activeColor": "#00E5A0",
      "inactiveColor": "#71717A",
      "height": 84
    },

    "header": {
      "background": "transparent",
      "titleColor": "#FFFFFF",
      "height": 56
    },

    "transaction": {
      "background": "transparent",
      "pressedBg": "#1A1A1A",
      "iconSize": 40,
      "iconRadius": 12,
      "height": 72
    },

    "chip": {
      "background": "#1A1A1A",
      "text": "#FFFFFF",
      "selectedBg": "#00E5A0",
      "selectedText": "#000000",
      "height": 32,
      "borderRadius": 8
    },

    "badge": {
      "success": { "bg": "#00E5A01A", "text": "#00E5A0" },
      "warning": { "bg": "#FBBF241A", "text": "#FBBF24" },
      "error": { "bg": "#EF44441A", "text": "#EF4444" },
      "neutral": { "bg": "#27272A", "text": "#A1A1AA" }
    },

    "avatar": {
      "sizes": { "sm": 32, "md": 40, "lg": 48, "xl": 64 },
      "background": "#27272A",
      "borderRadius": 9999
    },

    "skeleton": {
      "background": "#1A1A1A",
      "shimmer": "#27272A"
    }
  },

  "icons": {
    "sizes": { "sm": 16, "md": 20, "lg": 24, "xl": 32 },
    "strokeWidth": 2,
    "color": {
      "default": "#FFFFFF",
      "muted": "#71717A",
      "accent": "#00E5A0"
    }
  },

  "screens": {
    "station": {
      "background": "#000000",
      "sections": ["header", "balance", "quickActions", "stashes", "activity"]
    },
    "spendingStash": {
      "accent": "#00E5A0",
      "sections": ["balance", "card", "transactions"]
    },
    "investmentStash": {
      "accent": "#FF6B35",
      "sections": ["balance", "performance", "conductors", "holdings"]
    }
  },

  "patterns": {
    "railSplit": {
      "base": 0.7,
      "active": 0.3
    },
    "emptyState": {
      "iconSize": 80,
      "iconColor": "#3F3F46",
      "titleColor": "#FFFFFF",
      "descColor": "#71717A"
    },
    "pullToRefresh": {
      "color": "#00E5A0",
      "background": "#000000"
    }
  },

  "accessibility": {
    "minTouchTarget": 44,
    "focusRing": "#00E5A0"
  }
}
