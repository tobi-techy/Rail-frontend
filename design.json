{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "name": "Rail Design System",
  "version": "3.0.0",
  "description": "Bold, clean, minimal fintech design. Money in motion, zero friction.",

  "designPrinciples": {
    "bold": "High contrast, confident typography, unapologetic design choices",
    "clean": "Black and white foundation with vibrant accent colors",
    "minimal": "Strip everything unnecessary. If it doesn't serve the user, remove it",
    "momentum": "Money should feel like it's always moving"
  },

  "colors": {
    "brand": {
      "primary": {
        "value": "#FF2E01",
        "description": "Rail Red - primary brand color, CTAs, active states"
      },
      "primaryDark": {
        "value": "#E02900",
        "description": "Darker red for pressed states"
      },
      "secondary": {
        "value": "#00C853",
        "description": "Rail Green - success, positive states, growth"
      },
      "black": {
        "value": "#000000",
        "description": "Pure black - backgrounds, text"
      },
      "white": {
        "value": "#FFFFFF",
        "description": "Pure white - backgrounds, text"
      }
    },

    "gradient": {
      "auth": {
        "colors": ["#FF2E01", "#FF6B4A", "#FFB8A8", "#FFFFFF"],
        "description": "Auth screens gradient - red to white"
      }
    },

    "semantic": {
      "success": "#00C853",
      "warning": "#FBBF24",
      "error": "#FF2E01",
      "info": "#71717A"
    },

    "dark": {
      "background": {
        "primary": "#000000",
        "secondary": "#0A0A0A",
        "tertiary": "#141414",
        "card": "#1A1A1A",
        "elevated": "#1F1F1F",
        "input": "#141414"
      },
      "text": {
        "primary": "#FFFFFF",
        "secondary": "#A1A1AA",
        "tertiary": "#71717A",
        "muted": "#52525B"
      },
      "border": {
        "default": "#27272A",
        "subtle": "#1F1F1F",
        "strong": "#3F3F46"
      }
    },

    "light": {
      "background": {
        "primary": "#FFFFFF",
        "secondary": "#FAFAFA",
        "tertiary": "#F4F4F5",
        "card": "#FFFFFF",
        "elevated": "#FFFFFF",
        "input": "#F4F4F5"
      },
      "text": {
        "primary": "#000000",
        "secondary": "#71717A",
        "tertiary": "#A1A1AA",
        "muted": "#D4D4D8"
      },
      "border": {
        "default": "#E4E4E7",
        "subtle": "#F4F4F5",
        "strong": "#D4D4D8"
      }
    },

    "default": "light"
  },

  "typography": {
    "fontFamily": {
      "display": "PramukhRounded-Bold",
      "headline": "PramukhRounded-Bold",
      "headline2": "PramukhRounded-Semibold",
      "body": "SF-Pro-Rounded-Medium",
      "bodyBold": "SF-Pro-Rounded-Bold",
      "caption": "SF-Pro-Rounded-Regular",
      "button": "SF-Pro-Rounded-Semibold",
      "mono": "SF-Mono-Regular"
    },

    "scale": {
      "hero": {
        "fontSize": 56,
        "lineHeight": 60,
        "letterSpacing": -2,
        "fontFamily": "PramukhRounded-Bold",
        "usage": "Main balance display"
      },
      "display": {
        "fontSize": 40,
        "lineHeight": 44,
        "letterSpacing": -1.5,
        "fontFamily": "PramukhRounded-Bold",
        "usage": "Large amounts, hero text"
      },
      "h1": {
        "fontSize": 32,
        "lineHeight": 36,
        "letterSpacing": -1,
        "fontFamily": "PramukhRounded-Bold",
        "usage": "Screen titles"
      },
      "h2": {
        "fontSize": 24,
        "lineHeight": 28,
        "letterSpacing": -0.5,
        "fontFamily": "PramukhRounded-Semibold",
        "usage": "Section headers"
      },
      "h3": {
        "fontSize": 20,
        "lineHeight": 24,
        "letterSpacing": -0.3,
        "fontFamily": "SF-Pro-Rounded-Bold",
        "usage": "Card titles"
      },
      "body": {
        "fontSize": 16,
        "lineHeight": 24,
        "letterSpacing": 0,
        "fontFamily": "SF-Pro-Rounded-Medium",
        "usage": "Primary body text"
      },
      "bodySmall": {
        "fontSize": 14,
        "lineHeight": 20,
        "letterSpacing": 0,
        "fontFamily": "SF-Pro-Rounded-Regular",
        "usage": "Secondary text"
      },
      "caption": {
        "fontSize": 12,
        "lineHeight": 16,
        "letterSpacing": 0.2,
        "fontFamily": "SF-Pro-Rounded-Regular",
        "usage": "Labels, hints"
      },
      "overline": {
        "fontSize": 11,
        "lineHeight": 14,
        "letterSpacing": 1,
        "fontFamily": "SF-Pro-Rounded-Semibold",
        "textTransform": "uppercase",
        "usage": "Category labels"
      },
      "button": {
        "fontSize": 16,
        "lineHeight": 20,
        "letterSpacing": 0.3,
        "fontFamily": "SF-Pro-Rounded-Semibold",
        "usage": "Button labels"
      },
      "amount": {
        "fontSize": 32,
        "lineHeight": 36,
        "letterSpacing": -0.5,
        "fontFamily": "SF-Pro-Rounded-Bold",
        "fontVariantNumeric": "tabular-nums",
        "usage": "Stash amounts"
      }
    }
  },

  "spacing": {
    "base": 4,
    "scale": {
      "0": 0,
      "1": 4,
      "2": 8,
      "3": 12,
      "4": 16,
      "5": 20,
      "6": 24,
      "8": 32,
      "10": 40,
      "12": 48,
      "16": 64
    },
    "screen": {
      "paddingX": 16,
      "paddingY": 16
    }
  },

  "borderRadius": {
    "none": 0,
    "sm": 8,
    "md": 12,
    "lg": 16,
    "xl": 20,
    "2xl": 24,
    "3xl": 32,
    "full": 9999
  },

  "shadows": {
    "none": "none",
    "sm": {
      "shadowColor": "#000",
      "shadowOffset": { "width": 0, "height": 1 },
      "shadowOpacity": 0.1,
      "shadowRadius": 2,
      "elevation": 2
    },
    "md": {
      "shadowColor": "#000",
      "shadowOffset": { "width": 0, "height": 4 },
      "shadowOpacity": 0.15,
      "shadowRadius": 8,
      "elevation": 4
    },
    "lg": {
      "shadowColor": "#000",
      "shadowOffset": { "width": 0, "height": 8 },
      "shadowOpacity": 0.2,
      "shadowRadius": 16,
      "elevation": 8
    }
  },

  "motion": {
    "duration": {
      "instant": 100,
      "fast": 150,
      "normal": 200,
      "slow": 300
    },
    "easing": {
      "default": "cubic-bezier(0.25, 0.1, 0.25, 1)",
      "spring": "cubic-bezier(0.34, 1.56, 0.64, 1)",
      "smooth": "cubic-bezier(0.4, 0, 0.2, 1)"
    },
    "spring": {
      "default": { "damping": 20, "stiffness": 300 },
      "bouncy": { "damping": 12, "stiffness": 400 }
    }
  },

  "components": {
    "button": {
      "primary": {
        "background": "#FF2E01",
        "text": "#FFFFFF",
        "height": 52,
        "borderRadius": 9999,
        "fontWeight": 600
      },
      "secondary": {
        "background": "#000000",
        "text": "#FFFFFF",
        "height": 52,
        "borderRadius": 9999
      },
      "ghost": {
        "background": "transparent",
        "text": "#000000",
        "height": 44,
        "borderRadius": 9999
      },
      "outline": {
        "background": "transparent",
        "text": "#FF2E01",
        "border": "#FF2E01",
        "height": 52,
        "borderRadius": 9999
      }
    },

    "input": {
      "background": "#F4F4F5",
      "text": "#000000",
      "placeholder": "#71717A",
      "border": "#E4E4E7",
      "borderFocused": "#FF2E01",
      "height": 52,
      "borderRadius": 12,
      "paddingX": 16
    },

    "card": {
      "background": "#FFFFFF",
      "border": "#E4E4E7",
      "borderRadius": 16,
      "padding": 16
    },

    "bottomSheet": {
      "background": "#FFFFFF",
      "handle": "#D4D4D8",
      "borderRadius": 24
    },

    "tabBar": {
      "background": "#FFFFFF",
      "border": "#E4E4E7",
      "activeColor": "#FF2E01",
      "inactiveColor": "#71717A",
      "height": 84
    },

    "header": {
      "background": "transparent",
      "titleColor": "#000000",
      "height": 56
    },

    "transaction": {
      "background": "transparent",
      "pressedBg": "#F4F4F5",
      "iconSize": 48,
      "iconRadius": 24,
      "height": 72
    },

    "badge": {
      "success": { "bg": "#00C8531A", "text": "#00C853" },
      "warning": { "bg": "#FBBF241A", "text": "#FBBF24" },
      "error": { "bg": "#FF2E011A", "text": "#FF2E01" },
      "neutral": { "bg": "#E4E4E7", "text": "#71717A" }
    }
  },

  "icons": {
    "sizes": { "sm": 16, "md": 20, "lg": 24, "xl": 32 },
    "strokeWidth": 2,
    "color": {
      "default": "#000000",
      "muted": "#71717A",
      "accent": "#FF2E01"
    }
  },

  "accessibility": {
    "minTouchTarget": 44,
    "focusRing": "#FF2E01"
  }
}
